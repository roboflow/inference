{
  "version": "1.0",
  "inputs": [
    {
      "type": "WorkflowImage",
      "name": "image"
    },
    {
      "type": "WorkflowParameter",
      "name": "object_prompt",
      "default_value": ["object"]
    }
  ],
  "steps": [
    {
      "type": "roboflow_core/yolo_world_model@v1",
      "name": "yolo_world",
      "images": "$inputs.image",
      "class_names": "$inputs.object_prompt",
      "version": "v2-s",
      "confidence": 0.2
    },
    {
      "type": "roboflow_core/segment_anything@v1",
      "name": "sam2",
      "images": "$inputs.image",
      "boxes": "$steps.yolo_world.predictions",
      "version": "hiera_tiny",
      "threshold": 0.0,
      "multimask_output": true
    },
    {
      "type": "roboflow_core/segment_anything3_3d_objects@v1",
      "name": "sam3_3d",
      "images": "$inputs.image",
      "mask_input": "$steps.sam2.predictions"
    }
  ],
  "outputs": [
    {
      "type": "JsonField",
      "name": "mesh_glb",
      "coordinates_system": "own",
      "selector": "$steps.sam3_3d.mesh_glb"
    },
    {
      "type": "JsonField",
      "name": "gaussian_ply",
      "coordinates_system": "own",
      "selector": "$steps.sam3_3d.gaussian_ply"
    },
    {
      "type": "JsonField",
      "name": "objects",
      "coordinates_system": "own",
      "selector": "$steps.sam3_3d.objects"
    },
    {
      "type": "JsonField",
      "name": "inference_time",
      "coordinates_system": "own",
      "selector": "$steps.sam3_3d.inference_time"
    }
  ]
}
